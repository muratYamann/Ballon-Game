<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#A1B09B"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yeni_oyun"
        android:background="@android:color/transparent"
        android:src="@drawable/play"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoree"
        android:background="@android:color/transparent"
        android:src="@drawable/score"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/checkBox"
        android:layout_alignEnd="@+id/checkBox" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hakkimizda"
        android:src="@drawable/about"
        android:background="@android:color/transparent"
        android:layout_gravity="right"
        android:layout_below="@+id/yeni_oyun"
        android:layout_toRightOf="@+id/yeni_oyun"
        android:layout_toEndOf="@+id/yeni_oyun"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cikis"
        android:background="@android:color/transparent"
        android:src="@drawable/exit"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp"
        android:layout_below="@+id/scoree"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:button="@drawable/speaker"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_below="@+id/cikis"
        android:layout_centerHorizontal="true" />

</RelativeLayout>